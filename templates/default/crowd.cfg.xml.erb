<?xml version="1.0" encoding="UTF-8"?>

<!-- Dynamically generated by Chef on <%= node["fqdn"] %> -->
<!-- Local modifications will be overwritten by Chef.     -->

<application-configuration>
  <setupStep>complete</setupStep>
  <setupType>install.new</setupType>
  <buildNumber>626</buildNumber>
  <properties>
    <property name="crowd.server.id"><%= node['crowd']['serverid'] %></property>
    <property name="hibernate.c3p0.acquire_increment">1</property>
    <property name="hibernate.c3p0.idle_test_period">100</property>
    <property name="hibernate.c3p0.max_size">30</property>
    <property name="hibernate.c3p0.max_statements">0</property>
    <property name="hibernate.c3p0.min_size">0</property>
    <property name="hibernate.c3p0.timeout">30</property>
    <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
    <property name="hibernate.connection.password"><%= node['crowd']['database']['password'] %></property>
    <property name="hibernate.connection.url">jdbc:postgresql://<%= node['crowd']['database']['host'] %>:<%= node['crowd']['database']['port'] %>/<%= node['crowd']['database']['name'] %></property>
    <property name="hibernate.connection.username"><%= node['crowd']['database']['user'] %></property>
    <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
    <property name="hibernate.setup">true</property>
    <property name="license"><%= node['crowd']['license'] %></property>
  </properties>
</application-configuration>
